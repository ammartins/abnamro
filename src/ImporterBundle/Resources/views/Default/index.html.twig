{% extends 'base.html.twig' %}

{% block menu %}
    {% include 'menu.html.twig' %}
{% endblock %}

{% block body %}
    <div class="table-responsive">
        <table class="table table-hover table-sm">
            <thead class="thead-dark">
                <tr>
                    <th>Filename</th>
                    <th>Created</th>
                    <th>Imported</th>
                    <th>Transactions</th>
                    <th>Success</th>
                    <th>Failed</th>
                </tr>
            </thead>
            <tbody>
                {% for imported in data %}
                    <tr>
                        <td>{{ imported.fileName }}</td>
                        <td>{{ imported.createdAt | date }}</td>
                        <td>{{ imported.importedAt | date }}</td>
                        <td>{{ imported.transactions }}</td>
                        <td>{{ imported.success  }}</td>
                        <td>{{ imported.failed  }}</td>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
