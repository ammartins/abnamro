{% block body %}
    <div class="table-responsive">
    <table class="table table-hover table-sm">
        <thead class="thead-dark">
            <tr>
                <th>Category</th>
                <th>Total</th>
            </th>
        </thead>
        {% for monthSpent in monthSpents %}
            <tr>
                <td>{{ monthSpent.description }}</td>
                <td>{{ monthSpent.amount|number_format(2) }}</td>
            </tr>
        {% endfor %}
    </table>
    </div>
{% endblock %}
