<table class="table table-condensed table-hover table-responsive">
  <tr>
    <th>Description</th>
    <th>Amount</th>
  </tr>
  {% set total = 0 %}
  {% for description in descriptionData %}
    <tr>
      <td>{{ description.description|capitalize }}</td>
      <td class="text-right">{{ description.amount|round(1, 'floor') }} €</td>
    </tr>
    {% set total = total + description.amount %}
  {% endfor %}
  <tr class="{% if total > 0 %}success{% else %}danger{% endif %}">
    <td>Total</td>
    <td class="text-right">{{ total|round(1, 'floor') }} €</td>
  </tr>
</table>
