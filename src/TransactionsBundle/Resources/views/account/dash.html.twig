{% extends 'base.html.twig' %}

{% block menu %}
  {% include 'menu.html.twig' %}
{% endblock %}
{% block body %}
  {# TODO Show Balance (Show Multiple Accounts if that's the case) #}
  {% for key, info in data %}
    <a href="{{ path('home', {'currentYear' : info.year,'currentMonth' : info.month}) }}">
      <div class="text-center col-md-2 {% if info[2] > 0 %}bg-success{% else %}bg-danger{% endif %}">
        <h3>{{ info.month }}-{{ info.year }}</h3>
        {% if info[1]-matched[key][1]  == 0 %}
            <span class="glyphicon glyphicon-ok"></span>
        {% else %}
            <span>Open Transactions: {{ info[1]-matched[key][1] }}</span>
        {% endif %}
        <p>{{ info.2|round(2, 'floor') }} â‚¬</p>
      </div>
    </a>
  {% endfor %}
{% endblock %}
