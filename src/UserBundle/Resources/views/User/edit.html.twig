{% extends 'base.html.twig' %}

{% block menu %}
    {% include 'menu.html.twig' %}
{% endblock %}

{% block body %}
    {{ form_start(form) }}
        <div class="form-group">
            <label for="email">{{ form_label(form.email) }}</label>
            {% include '::errors.html.twig' with {'errors': form.email.vars.errors} %}
            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            <label for="bankAccount">{{ form_label(form.bankAccount) }}</label>
            {% include '::errors.html.twig' with {'errors': form.bankAccount.vars.errors} %}
            {{ form_widget(form.bankAccount, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            <label for="ignoreSavings">Ignore Savings</label>
            {% include '::errors.html.twig' with {'errors': form.ignoreSavings.vars.errors} %}
            {{ form_widget(form.ignoreSavings, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="text-right">
          {{ form_widget(form.update, { 'attr': {'class': 'btn btn-success'}}) }}
        </div>
    {{ form_end(form) }}
{% endblock %}
