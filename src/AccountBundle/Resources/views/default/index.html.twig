{% extends 'base.html.twig' %}

{% block menu %}
  {% include 'menu.html.twig' %}
{% endblock %}
{% block body %}
  <script type="text/javascript">
      obj   = jQuery.parseJSON('{{ data|raw }}');
      objD  = jQuery.parseJSON('{{ graphDay|raw }}');
      objM  = jQuery.parseJSON('{{ graphMonth|raw }}');
      objM2 = jQuery.parseJSON('{{ graphMonth2|raw }}');
      day   = jQuery.parseJSON('{{ dataDay|raw }}');
      objMI = jQuery.parseJSON('{{ income|raw }}');
      objME = jQuery.parseJSON('{{ expenses|raw }}');
  </script>
  {% javascripts '@AccountBundle/Resources/public/js/pie.js' %}
      <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
  {% for flash_message in app.session.flashBag.get('notice') %}
    <div class="alert alert-success">
      {{ flash_message }}
    </div>
  {% endfor %}
  <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="table">
          {% include 'AccountBundle:default:currentMonth.html.twig' %}
      </div>
      <div role="tabpanel" class="tab-pane" id="monthgraph">
          {% include 'AccountBundle:default:montGraph.html.twig' %}
      </div>
      <div role="tabpanel" class="tab-pane" id="dailygraph">
          {% include 'AccountBundle:default:dailygraph.html.twig' %}
      </div>
      <div role="tabpanel" class="tab-pane" id="Categories">
          {% include 'CategoriesBundle:Categories:Categories.html.twig' %}
      </div>
  </div>
{% endblock %}
